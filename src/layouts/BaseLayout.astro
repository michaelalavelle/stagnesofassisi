---
import "../styles/global.css";

const { title = "St. Agnes of Assisi Fraternity" } = Astro.props;
const pathname = Astro.url.pathname;

const ensureTrailingSlash = (value) => (value.endsWith("/") ? value : `${value}/`);
const baseUrl = ensureTrailingSlash(import.meta.env.BASE_URL);

const navItems = [
  { href: baseUrl, label: "Home" },
  { href: `${baseUrl}about-ofs/`, label: "About the OFS" },
  { href: `${baseUrl}our-fraternity/`, label: "Our Fraternity" },
  { href: `${baseUrl}events/`, label: "Events" },
  { href: `${baseUrl}resources/`, label: "Resources" },
  { href: `${baseUrl}contact/`, label: "Contact" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/png" href={`${baseUrl}favicon.png`} />
  </head>
  <body style={`--base-url: ${baseUrl}; --bg-image: url(${baseUrl}stagnes.png);`}>
    <a class="skip-link" href="#main-content">Skip to content</a>
    <header class="site-header">
      <div class="container header-inner">
        <a class="brand" href={baseUrl}>
          <strong>St. Agnes of Assisi Fraternity</strong>
          <span>Secular Franciscan Order - Tau Cross Region</span>
        </a>
        <nav class="nav nav-desktop" aria-label="Main">
          {navItems.map((item) => (
            <a
              href={item.href}
              aria-current={pathname === item.href ? "page" : undefined}
            >
              {item.label}
            </a>
          ))}
        </nav>
        <details class="nav-toggle" aria-label="Main">
          <summary class="nav-toggle-button" aria-label="Toggle navigation">
            <span class="nav-toggle-icon" aria-hidden="true"></span>
          </summary>
          <nav class="nav nav-mobile" aria-label="Main">
            {navItems.map((item) => (
              <a
                href={item.href}
                aria-current={pathname === item.href ? "page" : undefined}
              >
                {item.label}
              </a>
            ))}
          </nav>
        </details>
      </div>
    </header>

    <main id="main-content">
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class="site-footer">
      <div class="container footer-simple">
        <p><strong>St. Agnes of Assisi Fraternity, OFS</strong></p>
        <p>Our Lady of Lourdes - West Islip, NY</p>
        <p>&copy;2026 Secular Franciscan Order</p>
      </div>
    </footer>
  </body>
</html>
